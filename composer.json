{
  "name": "f4php/f4",
  "description": "The skeleton application for F4, a (really) lightweight web application framework",
  "keywords": [
    "f4",
    "framework"
  ],
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "src/App"
    }
  },
  "authors": [
    {
      "name": "Dennis Kreminsky",
      "email": "dennis@kreminsky.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "symfony/console": "^7.1",
    "composer-runtime-api": "*",
    "f4php/framework": "^0.1.37"
  },
  "config": {
    "optimize-autoloader": true,
    "process-timeout": 0
  },
  "scripts": {
    "post-update-cmd": "npm update",
    "post-install-cmd": "npm install",
    "post-create-project-cmd": [
      "composer run create-config > config/local.php"
    ],
    "create-config": "@php scripts/create-config.php",
    "serve": "@php -S `composer config extra.f4.environments.local.server` -t public/"
  },
  "extra": {
    "f4": {
      "environments": {
        "production": {
          "config": "config/production.php"
        },
        "test": {
          "config": "config/test.php"
        },
        "local": {
          "config": "config/local.php",
          "server": "localhost:8080"
        },
        "default": {
          "config": "config/default.php"
        }
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
